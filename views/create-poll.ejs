<form method="post" action="/polls/create">
  <label>Poll Question</label>
  <input name="question" placeholder="What would you like to ask?" required />
  <label>Options (one per line, minimum 2 required)</label>
  <textarea name="options" rows="6" placeholder="Option 1&#10;Option 2&#10;Option 3&#10;Option 4" required></textarea>
  <label>Expires At (optional)</label>
  <input name="expiresAt" type="datetime-local" />
  <button type="submit">Create Poll</button>
</form>
